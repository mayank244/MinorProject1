<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#404040"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/blackbox1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.13"
        android:background="#404040"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackbox2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.61"
        android:background="#404040"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/blackbox2_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.56"
            android:background="#404040"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox2_2"
            android:layout_width="0dp"
            android:layout_height="138dp"
            android:layout_weight="7.20"
            android:background="#404040"
            android:orientation="vertical" >

            <Button
                android:id="@+id/editorclick"
                style="@style/BUttonstyle"
                android:layout_width="98dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:background="@drawable/editor"
                android:gravity="left"
                android:onClick="showpopup" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="     TEXT EDITOR" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox2_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:background="#404040"
            android:orientation="vertical" >

            <Button
                android:id="@+id/equationclick"
                style="@style/BUttonstyle"
                android:layout_width="match_parent"
                android:layout_height="99dp"
                android:layout_margin="10dp"
                android:background="@drawable/equation"
                android:gravity="right"
                android:onClick="showpopup1" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.39"
                android:text="     EQUATION SOLVER" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox2_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.56"
            android:background="#404040"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackbox3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.75"
        android:background="#404040"
        android:orientation="horizontal" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackbox4"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        android:layout_weight="0.24"
        android:background="#404040"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/blackbox4_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.40"
            android:background="#404040"
            android:orientation="vertical" >
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox4_2"
            android:layout_width="0dp"
            android:layout_height="123dp"
            android:layout_weight="6.71"
            android:background="#404040"
            android:orientation="vertical" >

            <Button
                android:id="@+id/transclick"
                style="@style/BUttonstyle"
                android:layout_width="100dp"
                android:layout_height="84dp"
                android:layout_margin="10dp"
                android:background="@drawable/trans"
                android:gravity="left"
                android:onClick="showpopup" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2.68"
                android:text="     TRANSLATOR" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox4_3"
            android:layout_width="0dp"
            android:layout_height="133dp"
            android:layout_weight="6.99"
            android:background="#404040"
            android:orientation="vertical" >

            <Button
                android:id="@+id/cardclick"
                style="@style/BUttonstyle"
                android:layout_width="match_parent"
                android:layout_height="83dp"
                android:layout_margin="10dp"
                android:layout_weight="4.64"
                android:background="@drawable/bcard"
                android:gravity="right"
                android:onClick="showpopup" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="      BUISNESS CARD " />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/blackbox4_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.52"
            android:background="#404040"
            android:orientation="vertical" >
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/blackbox5"
        android:layout_width="match_parent"
        android:layout_height="22dp"
        android:layout_weight="0.28"
        android:background="#404040"
        android:orientation="horizontal" >

    </LinearLayout>

</LinearLayout>